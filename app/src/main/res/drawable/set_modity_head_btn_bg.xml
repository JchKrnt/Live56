<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/a_white" />
            <gradient android:centerColor="@color/a_white" android:endColor="@color/a_white" android:startColor="@color/a_white" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/a_white" />
            <gradient android:centerColor="@android:color/transparent" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />
        </shape>
    </item>
</selector>