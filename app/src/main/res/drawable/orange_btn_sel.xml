<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:centerColor="@color/gray_press" android:endColor="@color/gray_press" android:startColor="@color/gray_press" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:centerColor="@color/btn_pink" android:endColor="@color/btn_pink" android:startColor="@color/btn_pink" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>