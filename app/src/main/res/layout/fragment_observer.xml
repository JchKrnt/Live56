<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_video_frag_content"
    tools:context="com.sohu.live56.view.main.player.ObserverFrag">

    <LinearLayout
        style="@style/gray_bg_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.jch.utillib.view.CircleImageView
            android:id="@+id/video_frag_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/login_account"
            app:border_color="@color/white"
            app:border_width="1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_frag_name"
                style="@style/font_12_w_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:text="旺角鲸蜡将覅东放鸡蛋" />

            <TextView
                android:id="@+id/video_frag_career"
                style="@style/font_8_w_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:text="发放方式范德萨发三分范德萨范德萨" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/video_frag_close"
        style="@style/style_video_close_btn"
        android:src="@drawable/close_sel" />

    <ImageView
        android:id="@+id/video_frag_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/video_frag_close"
        android:src="@mipmap/live_56logo" />

    <ImageButton
        android:id="@+id/video_frag_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/video_frag_close"
        android:background="@null"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:src="@drawable/share_sel" />

    <LinearLayout
        android:id="@+id/video_frag_btm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            style="@style/font_15_white"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/video_edit_bg"
            android:drawableLeft="@mipmap/live_comment"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:src="@mipmap/live_account" />

        <TextView
            android:id="@+id/video_frag_num"
            style="@style/font_15_w_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="50dp"
            android:minWidth="20dp"
            android:text="9832" />

    </LinearLayout>

</RelativeLayout>
