<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTitleStyle">@style/LiveWindowTitleStyle</item>
    </style>


    <style name="LiveWindowTitleStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="homepage_tab_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:drawablePadding">-17dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="home_tab_radiogroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/head_height</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="style_title_font">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/black_font</item>
        <item name="android:textSize">@dimen/font_title_21</item>
    </style>

    <style name="style_13_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_font</item>
        <item name="android:textSize">@dimen/font_item_13</item>
    </style>

    <style name="style_13_single_text" parent="style_13_text">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="font_15_white">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_15_w_text" parent="font_15_white">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="font_12_w_text">
        <item name="android:textSize">@dimen/font_name_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="font_8_w_text">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_career_8</item>
    </style>


    <style name="gray_bg_label" parent="font_15_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gray_text_bg</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="style_video_frag_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

</resources>
