<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTitleStyle">@style/LiveWindowTitleStyle</item>
    </style>


    <style name="LiveWindowTitleStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="homepage_tab_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:drawablePadding">-17dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="home_tab_radiogroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/head_height</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="style_title_font">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/black_font</item>
        <item name="android:textSize">@dimen/font_title_21</item>
    </style>

    <style name="style_13_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_font</item>
        <item name="android:textSize">@dimen/font_item_13</item>
    </style>

    <style name="font_13_w">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_item_13</item>
    </style>

    <style name="style_13_single_text" parent="style_13_text">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="font_15_white">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_15_w_text" parent="font_15_white">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="font_16_o_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/btn_pink</item>
    </style>

    <style name="font_12_w_text">
        <item name="android:textSize">@dimen/font_name_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="font_12_b_text">
        <item name="android:textSize">@dimen/font_name_12</item>
        <item name="android:textColor">@color/black_font</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="font_8_w_text">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_career_8</item>
    </style>


    <style name="gray_bg_label" parent="font_15_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gray_text_bg</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="style_video_frag_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="style_dialog_tiltl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_font</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_share_item">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="style_dialog_tr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">25dp</item>
    </style>

    <style name="style_login_icon" parent="style_13_text">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_18_b_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_font</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="style_18_w_tv">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="style_login_et" parent="style_login_et_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>

    <style name="style_login_et_text">
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/hint_font</item>
        <item name="android:textColor">@color/black_font</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="style_login_etv" parent="style_login_et_text">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="style_divide_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/tab_gray_divide</item>
    </style>

    <style name="style_divide_line_weight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/tab_gray_divide</item>
    </style>

    <style name="login_input_area">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_input_area</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_login_btn" parent="style_18_w_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/orange_btn_sel</item>
    </style>

    <style name="personal_text_title">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/black_font</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="style_personal_text_r">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black_font</item>
        <item name="android:textSize">13dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:drawableRight">@mipmap/arrow</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">@string/un_input</item>
        <item name="android:colorBackgroundCacheHint">@color/hint_font</item>
    </style>

    <style name="style_center_link_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="style_live_lv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">10dp</item>
    </style>

    <style name="style_video_close_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

</resources>
